{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
